            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    .alert {
        position: relative;
        padding-right: 40px; /* Adjust this value as needed */
    }

    .close {
        position: absolute;
        top: 0;
        right: 0;
        padding: 8px 15px;
        background: transparent;
        border: 0;
        font-size: 20px;
        color: #000;
        opacity: 0.5;
    }

        .close:hover {
            opacity: 1;
        }

    .message-content {
        margin-right: 30px; /* Adjust this value to create space between the text and the button */
    }
</style>

